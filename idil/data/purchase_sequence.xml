<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Manufacturing Order Reference -->
        <record id="seq_idil_purchase_order" model="ir.sequence">
            <field name="name">Purchase Order Sequence</field>
            <field name="code">idil.purchase_order.sequence</field>
            <field name="prefix">PO/%(year)s/</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field> <!-- Sequence number padding, e.g., 00001 -->
            <field name="company_id" eval="False"/> <!-- Apply to all companies; set specific company ID if needed -->
        </record>

        <record id="seq_product_purchase_order" model="ir.sequence">
            <field name="name">Product Purchase Order</field>
            <field name="code">product.purchase.order.seq</field>
            <field name="prefix">Purchase Product/</field>
            <field name="padding">4</field>
        </record>
    </data>
</odoo>
